@model IEnumerable<Puestos>

@{
    ViewData["Title"] = "Lista de Puestos";
}

<h1>Lista de Puestos</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">
                IdPuesto
            </th>
        <th scope="col">
                Nombre
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var Puestos in Model)
        {
            <tr>
                <td>
                    @Puestos.idPuestos
                </td>
                <td>
                    @Puestos.nombrePuestos
                </td>
                
                
                <td>
                    <a class="btn btn-outline-danger" asp-action="PuestosDelete" asp-controller="Puestos" asp-route-idPuestos="@Puestos.idPuestos">
                        Borrar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>
    <a class="btn btn-outline-info" asp-action="PuestosAdd" asp-controller="Puestos"
    >
        Agregar
    </a>
</h2>
